<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">#2bae00</item>-->
        <!--<item name="colorPrimaryDark">#82f927</item>-->
        <item name="colorPrimary">#e62117</item>
        <item name="colorPrimaryDark">#e62117</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_right</item>
